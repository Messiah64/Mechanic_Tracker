<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MechanicTracker"
        tools:targetApi="31">
        <activity
            android:name=".screens.OrderMessages"
            android:exported="false" />
        <activity
            android:name=".screens.Edit_Order"
            android:exported="false" />
        <activity
            android:name=".screens.Completed_Orders"
            android:exported="false" />
        <activity
            android:name=".screens.Add_Order"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".screens.Ongoing_Orders"
            android:exported="false" />
        <activity
            android:name=".screens.Register"
            android:exported="false" />
        <activity
            android:name=".screens.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>